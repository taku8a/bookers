<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error has occurred
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>


  <h4>Body</h4>
  <%= f.text_area :body %>
<div class="actions">
  <%= f.submit 'Update Book' %>
  
</div>
  

<% end %>


<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>


